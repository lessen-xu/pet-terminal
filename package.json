{
  "name": "pet-terminal",
  "version": "1.0.1",
  "description": "A virtual pet that lives in your terminal - earns rewards when you make Git commits!",
  "main": "dist/index.js",
  "bin": {
    "pet": "./dist/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pet",
    "virtual-pet",
    "game",
    "terminal",
    "cli",
    "command-line",
    "git",
    "github",
    "developer",
    "productivity",
    "gamification",
    "fun",
    "coding",
    "companion",
    "motivation",
    "cli-game",
    "tamagotchi",
    "developer-tools",
    "workflow",
    "git-integration"
  ],
  "author": "Lishang Xu <lessenx2002@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lessen-xu/pet-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/lessen-xu/pet-terminal/issues"
  },
  "homepage": "https://github.com/lessen-xu/pet-terminal",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.5",
    "lowdb": "^1.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
